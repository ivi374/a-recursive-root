# AI Council System - Environment Variables
# Copy this file to .env and fill in your API keys

# ===================================================================
# LLM Providers (at least one required)
# ===================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=your-claude-api-key

# OpenAI GPT-4
OPENAI_API_KEY=your-openai-api-key

# xAI Grok
XAI_API_KEY=your-xai-api-key

# ===================================================================
# Event Sources (optional)
# ===================================================================

# Twitter/X API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# News API
NEWS_API_KEY=your-newsapi-key

# ===================================================================
# Text-to-Speech (optional)
# ===================================================================

# ElevenLabs (premium TTS)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ===================================================================
# Database (if using PostgreSQL)
# ===================================================================

POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://council_user:your-secure-password@postgres:5432/ai_council

# ===================================================================
# Application Configuration
# ===================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===================================================================
# Streaming Configuration
# ===================================================================

# Video output directory
VIDEO_OUTPUT_DIR=./output/videos

# Audio output directory
AUDIO_OUTPUT_DIR=./output/audio

# RTMP streaming (for live broadcasts)
RTMP_URL=rtmp://your-streaming-server/live/stream_key

# ===================================================================
# Development Settings
# ===================================================================

# Enable debug mode (development only)
DEBUG=false

# Enable hot reload (development only)
RELOAD=false

# Use mock LLM (for testing without API keys)
USE_MOCK_LLM=false

# ===================================================================
# Blockchain Configuration (Phase 3)
# ===================================================================

# Enable blockchain features
BLOCKCHAIN_ENABLED=true

# Blockchain network: devnet, testnet, mainnet
BLOCKCHAIN_NETWORK=devnet

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WALLET_PRIVATE_KEY=your-solana-private-key

# Solana Program IDs (set after deployment)
COUNCIL_SELECTION_PROGRAM_ID=CounciL11111111111111111111111111111111111
VOTING_PROGRAM_ID=Voting11111111111111111111111111111111111

# Chainlink VRF (for verifiable randomness)
CHAINLINK_VRF_COORDINATOR=0x-your-vrf-coordinator-address
CHAINLINK_VRF_KEY_HASH=0x-your-key-hash
CHAINLINK_VRF_SUBSCRIPTION_ID=123

# Pyth Network (for price feeds and entropy)
PYTH_NETWORK_ENDPOINT=https://xc-mainnet.pyth.network
PYTH_PRICE_FEED_IDS=BTC/USD,ETH/USD,SOL/USD

# Mock Mode (for development without blockchain)
CHAINLINK_MOCK_MODE=true
PYTH_MOCK_MODE=true
SOLANA_MOCK_MODE=true
